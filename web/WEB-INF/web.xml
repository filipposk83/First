<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>Controllers.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controllers.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login2</servlet-name>
        <servlet-class>Controllers.Login2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentInsert</servlet-name>
        <servlet-class>Controllers.StudentInsert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDelete</servlet-name>
        <servlet-class>Controllers.StudentDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentUpdate</servlet-name>
        <servlet-class>Controllers.StudentUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerServlet</servlet-name>
        <servlet-class>Controllers.TrainerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerInsert</servlet-name>
        <servlet-class>Controllers.TrainerInsert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerDelete</servlet-name>
        <servlet-class>Controllers.TrainerDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerUpdate</servlet-name>
        <servlet-class>Controllers.TrainerUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login2</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentInsert</servlet-name>
        <url-pattern>/StudentInsert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDelete</servlet-name>
        <url-pattern>/StudentDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentUpdate</servlet-name>
        <url-pattern>/StudentUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainerServlet</servlet-name>
        <url-pattern>/TrainerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainerInsert</servlet-name>
        <url-pattern>/TrainerInsert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainerDelete</servlet-name>
        <url-pattern>/TrainerDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainerUpdate</servlet-name>
        <url-pattern>/TrainerUpdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
